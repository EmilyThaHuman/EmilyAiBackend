{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@app": ["app.js"],
      "@controllers/*": ["controllers/*"],
      "@models/*": ["models/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"],
      "@db/*": ["db/*"],
      "@middlewares/*": ["middlewares/*"],
      "@lib/*": ["lib/*"],
      "@public/*": ["../public/*"],
      "@test/*": ["__test__/*"],
      "@logger/*": ["config/logging/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "noImplicitAny": true
  },
  "include": [
    "src/**/*",
    "config/**/*",
    "public/**/*",
    "tests/**/*",
    "archive/CLEANUP/chat_helpers.js",
    "archive/CLEANUP/initialize.js",
    "archive/CLEANUP/chat",
    "archive/CLEANUP/old",
    "archive/CLEANUP/validate.js",
    "archive/CLEANUP/user.js",
    "archive/CLEANUP/main.js",
    "archive/CLEANUP/response.js",
    "archive/CLEANUP/env.js",
    "archive/CLEANUP/auth.js"
  ],
  "exclude": ["node_modules", "dist", "coverage"]
}
