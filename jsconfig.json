{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@app": ["app.js"],
      "@controllers/*": ["controllers/*"],
      "@models/*": ["models/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"],
      "@db/*": ["db/*"],
      "@middlewares/*": ["middlewares/*"],
      "@lib/*": ["lib/*"],
      "@public/*": ["../public/*"],
      "@test/*": ["__test__/*"],
      "@logger/*": ["config/logging/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "noImplicitAny": true
  },
  "include": [
    "src/**/*",
    "config/**/*",
    "public/**/*",
    "tests/**/*",
    "CLEANUP/chat_helpers.js",
    "CLEANUP/initialize.js"
, "CLEANUP/chat", "CLEANUP/old", "CLEANUP/validate.js", "CLEANUP/user.js", "CLEANUP/main.js", "CLEANUP/response.js", "CLEANUP/env.js", "CLEANUP/auth.js"  ],
  "exclude": ["node_modules", "dist", "coverage"]
}
